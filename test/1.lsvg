local p=Edge{CLOSED=true,LABEL="FIVE",SMOOTH=false,STYLE={connection="o-o-o",fill="orange"},lx=600,ly=600}

local r,a
local cos,sin,pi= math.cos,math.sin,math.pi
for i=1,10 do
	r=(i%2+1)*50
	p[i]={r*cos((i-1)*pi/5)+600,r*sin((i-1)*pi/5)+600}
end


